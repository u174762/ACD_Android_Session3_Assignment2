<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:layout_weight="7"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/red_color"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FF0000"
        android:text="RED"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/orange_color"
        android:layout_width="fill_parent"
        android:text="ORANGE"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_height="wrap_content"
        android:background="#ff6600"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/yellow_color"
        android:layout_width="fill_parent"
        android:text="YELLOW"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_height="wrap_content"
        android:background="#ffff33"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/green_color"
        android:layout_width="fill_parent"
        android:text="GREEN"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_height="wrap_content"
        android:background="#336600"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/blue_color"
        android:layout_width="fill_parent"
        android:text="BLUE"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:background="#3300ff"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/indigo_color"
        android:layout_width="fill_parent"
        android:text="INDIGO"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:background="#330066"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/violet_color"
        android:layout_width="fill_parent"
        android:text="VIOLET"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:background="#9900ff"
        android:layout_weight="1"/>






</LinearLayout>
